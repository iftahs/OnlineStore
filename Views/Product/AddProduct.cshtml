@model OnlneStore.ViewModels.CategoryView
@using OnlneStore.Models

@{
    ViewBag.Title = "AddProduct";
}

<h2>Add new product</h2>

<div class="row">
    <div class="col-lg-6" id="addProductDiv">
        <form method="post" id="frmAddProduct" novalidate>
            <div class="form-group">
                <label for="txtProductName">Product Name</label>
                <input type="text" class="form-control" id="txtProductName" placeholder="Product Name">
            </div>
            <div class="form-group">
                <label for="categorySelect">Category</label>
                <select id="categorySelect" class="form-control">
                    @foreach (Category cat in Model.categories)
                    {
                        <option value="@cat.CatId">@cat.CatName</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label for="txtShortDescription">Short Description</label>
                <textarea class="form-control" id="txtShortDescription" placeholder="Short Description" rows="4" maxlength="255"></textarea>
            </div>
            <div class="form-group">
                <label for="txtFullDescription">Full Description</label>
                <textarea class="form-control" id="txtFullDescription" placeholder="Full Description" rows="7"></textarea>
            </div>
            <div class="form-group">
                <label for="txtPrice">Price</label>
                <input type="text" class="form-control" id="txtPrice" placeholder="Price">
                <small id="priceHelp" class="form-text text-muted">Decimal number only like 10.99</small>
            </div>
            <div class="form-group text-center">
                <button type="submit" class="btn btn-primary" id="btnSubmit">Submit</button>
            </div>
        </form>
        <div id="Message" style="display:none;" class="alert alert-danger" role="alert">The marked fields are required or incorrect</div>
    </div>
</div>

